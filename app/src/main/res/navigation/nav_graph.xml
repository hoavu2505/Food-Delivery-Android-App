<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ltud.food.Fragment.homeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.ltud.food.Fragment.orderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/notiFragment"
        android:name="com.ltud.food.Fragment.notiFragment"
        android:label="fragment_noti"
        tools:layout="@layout/fragment_noti" />
    <fragment
        android:id="@+id/favFragment"
        android:name="com.ltud.food.Fragment.favFragment"
        android:label="fragment_fav"
        tools:layout="@layout/fragment_fav" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.ltud.food.Fragment.userFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <argument
            android:name="city"
            app:argType="string"
            android:defaultValue="null" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ltud.food.Fragment.loginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_verifyOTPFragment"
            app:destination="@id/verifyOTPFragment" />
    </fragment>
    <fragment
        android:id="@+id/verifyOTPFragment"
        android:name="com.ltud.food.Fragment.verifyOTPFragment"
        android:label="fragment_verify_otp"
        tools:layout="@layout/fragment_verify_otp">
        <argument
            android:name="phoneNumber"
            android:defaultValue="null"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/signUpEmailFragment"
        android:name="com.ltud.food.Fragment.signUpEmailFragment"
        android:label="fragment_sign_up_email"
        tools:layout="@layout/fragment_sign_up_email" />
    <fragment
        android:id="@+id/autoCompleteLocationFragment"
        android:name="com.ltud.food.Fragment.AutoCompleteLocationFragment"
        android:label="AutoCompleteLocationFragment"
        tools:layout="@layout/fragment_auto_complete_location">
        <action
            android:id="@+id/action_autoCompleteLocationFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>

</navigation>