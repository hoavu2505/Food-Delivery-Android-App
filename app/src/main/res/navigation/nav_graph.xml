<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ltud.food.Fragment.home.homeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_restaurantDetailFragment"
            app:destination="@id/restaurantDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.ltud.food.Fragment.order.orderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/notiFragment"
        android:name="com.ltud.food.Fragment.noti.notiFragment"
        android:label="fragment_noti"
        tools:layout="@layout/fragment_noti" />
    <fragment
        android:id="@+id/favFragment"
        android:name="com.ltud.food.Fragment.fav.favFragment"
        android:label="fragment_fav"
        tools:layout="@layout/fragment_fav" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.ltud.food.Fragment.user.userFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <argument
            android:name="city"
            app:argType="string"
            android:defaultValue="null" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ltud.food.Fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ltud.food.Fragment.loginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_loginFragment_to_verifyOTPFragment"
            app:destination="@id/verifyOTPFragment" />

    </fragment>
    <fragment
        android:id="@+id/signUpEmailFragment"
        android:name="com.ltud.food.Fragment.signUpEmailFragment"
        android:label="fragment_sign_up_email"
        tools:layout="@layout/fragment_sign_up_email" />
    <fragment
        android:id="@+id/verifyOTPFragment"
        android:name="com.ltud.food.Fragment.verifyOTPFragment"
        android:label="fragment_verify_o_t_p"
        tools:layout="@layout/fragment_verify_otp" >

        <argument
            android:name="phoneNumber"
            android:defaultValue="null"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/restaurantDetailFragment"
        android:name="com.ltud.food.Fragment.restaurantDetail.RestaurantDetailFragment"
        android:label="fragment_restaurant_detail"
        tools:layout="@layout/fragment_restaurant_detail" >

        <action
            android:id="@+id/action_restaurantDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="address"
            app:argType="string" />
        <argument
            android:name="rate"
            app:argType="float" />
        <argument
            android:name="img"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/gantoiFragment"
        android:name="com.ltud.food.Fragment.home.homeTabLayout.gantoiFragment"
        android:label="fragment_gantoi"
        tools:layout="@layout/fragment_gantoi" />
    <fragment
        android:id="@+id/autoCompleteLocationFragment"
        android:name="com.ltud.food.Fragment.AutoCompleteLocationFragment"
        android:label="fragment_auto_complete_location"
        tools:layout="@layout/fragment_auto_complete_location" >
        <action
            android:id="@+id/action_autoCompleteLocationFragment_to_userFragment"
            app:destination="@id/userFragment" />
    </fragment>
</navigation>